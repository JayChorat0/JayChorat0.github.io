rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow authenticated users to read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow any authenticated user to list the collection (e.g., for user counts)
      // This does not allow them to read the content of individual documents other than their own.
      allow list: if request.auth != null;
    }
  }
}
